{
  "AuthMode": "Authorize",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "affolterNET": "Debug"
    }
  },
  "AllowedHosts": "*",
  "affolterNET": {
    "Web": {
      "Auth": {
        "Provider": {
          "AuthorityBase": "https://localhost:8443",
          "Realm": "demo",
          "ClientId": "bff-client",
          "ClientSecret": "bff-client-secret"
        },
        "BffAuth": {
          "RedirectUri": "/signin-oidc",
          "PostLogoutRedirectUri": "/signout-callback-oidc"
        }
      },
      "Oidc": {
        "ResponseType": "code",
        "Scopes": "openid profile email",
        "SaveTokens": true,
        "UsePkce": true
      },
      "BffOptions": {
        "EnableTokenRefresh": true,
        "EnableRptTokens": true,
        "EnableAntiforgery": true,
        "FallbackPage": "/_Host",
        "ApiRoutePrefixes": [ "/api", "/bff" ]
      },
      "Swagger": {
        "Title": "Example BFF",
        "Version": "v1",
        "Description": "Example BFF demonstrating affolterNET.Web.Bff authentication",
        "EnableSwagger": true
      },
      "Cors": {
        "AllowedOrigins": [
          "https://localhost:5173",
          "https://localhost:5004"
        ],
        "AllowCredentials": true
      }
    }
  }
}
