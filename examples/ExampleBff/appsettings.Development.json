{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "affolterNET": "Debug",
      "Yarp": "Debug"
    }
  },
  "affolterNET": {
    "ReverseProxy": {
      "Routes": {
        "api-route": {
          "ClusterId": "api-cluster",
          "Match": {
            "Path": "/api/{**catch-all}"
          }
        },
        "frontend-catchall": {
          "ClusterId": "frontend-cluster",
          "Order": 10000,
          "Match": {
            "Path": "/{**catch-all}"
          }
        }
      },
      "Clusters": {
        "api-cluster": {
          "Destinations": {
            "api": {
              "Address": "https://localhost:5003"
            }
          }
        },
        "frontend-cluster": {
          "Destinations": {
            "frontend": {
              "Address": "http://localhost:9999"
            }
          }
        }
      }
    }
  }
}
